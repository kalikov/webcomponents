{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "build",
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "test/types"]
  },
  "include": [
    "src/**/*"
  ]
}