{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "classic",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["types", "src/types"]
  },
  "include": [
    "src/**/*"
  ]
}